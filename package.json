{
  "name": "@pacj/repo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:tui": "bun tui dev",
    "dev:web": "bun web dev",
    "build:web": "bun --cwd=packages/web run build",
    "format": "bun run prettier --write . --log-level silent",
    "update-packages": "bun update --recursive --interactive",
    "tui": "bun --cwd=packages/tui",
    "web": "bun --cwd=packages/web"
  },
  "catalog": {
    "@types/bun": "^1.3.8",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.8.3"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "semi": false,
    "printWidth": 120
  }
}
